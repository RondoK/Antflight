@model AntFlight.Models.FlightMessages.FlightMessage

<div asp-validation-summary="All" class="text-danger"></div>
<div class="row">
    <form asp-controller="Flightmessages" asp-action="AddFlight" method="post">
        <fieldset class="col-sm-6">
            <legend class="custom"><label asp-for="Ant.SpeciesName"></label></legend>
            <select asp-items="@ViewBag.Subfamilies" class="form-control" id="SubfamilieSelect" name="Ant.Genus.SubfamilieId">
                <option value="0">Все Подсемейства</option>
            </select>
            <span asp-validation-for="Ant.Genus.SubfamilieId" class="text-danger"></span>

            <select asp-items="@ViewBag.Genuses" class="form-control" id="GenusSelect" name="Ant.GenusId">
                <option value="0">Все Роды</option>
            </select>
            <span asp-validation-for="Ant.GenusId" class="text-danger"></span>

            <select asp-items="@ViewBag.Specieses" class="form-control" id="SpeciesSelect" name="AntId">
                <option value="0">Все Виды</option>
            </select>
            <span asp-validation-for="AntId" class="text-danger"></span>

        </fieldset>
        <div class="col-sm-6">
            <div style="background-color : chartreuse ; height:170px"></div>
        </div>
        <fieldset class="col-sm-12">
            <legend>Important Description</legend>
            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="FlightTime"></label>
                    <input asp-for="FlightTime" id="datepicker" />
                    <span asp-validation-for="FlightTime" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="FMDiscription.FlightIntensity"></label>
                    <select asp-for="FMDiscription.FlightIntensity" asp-items="@ViewBag.FlightIntensity">
                        <option>Одна королева</option>
                        <option>Несколько королев</option>
                        <option>Слабый лёт</option>
                        <option>Массовый лёт</option>
                    </select>
                    <span asp-validation-for="FMDiscription.FlightIntensity"></span>
                </div>
            </div>
            <fieldset>
                <legend>Location</legend>
                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="City.Country.Name"></label>
                        <select asp-items="@ViewBag.Countries" class="" id="CountrySelect" name="City.CountryId">
                            <option value="0">Все страны</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="City.Name"></label>
                        <select asp-items="@ViewBag.Cities" class="" id="CitySelect" name="CityId">
                            <option value="0">Все города</option>
                        </select>
                    </div>
                </div>
            </fieldset>
        </fieldset>




        <div class="col-sm-12">
            <input type="submit" class="btn btn-default" value="create" />
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <environment names="Development">
        <script src="~/js/FiltersView.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-ui/jquery-ui.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/FiltersView.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-ui/jquery-ui.min.js" asp-append-version="true"></script>
    </environment>
    <script type="text/javascript">
        $(function () {
            $("#datepicker").datepicker({
                dateFormat: "dd.mm.yy"
            });
        });
    </script>

}